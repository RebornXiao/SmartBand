<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#778899" 
    android:orientation="vertical"  >
    <com.xiao.smartband.view.TitleView
        android:id="@+id/titleview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="@drawable/sleepbg">
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="20dp"
	        android:text="@string/sleep_reminder"
	        android:layout_marginTop="15dp"
	        android:gravity="center"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1.0"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="vertical"
        android:layout_marginTop="15dp">
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:gravity="center">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sleepaim"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sleep_achieve_rate"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <TextView 
            android:id="@+id/tvsleepPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="#ab45fc"
            android:gravity="center"/>
             <TextView 
            android:id="@+id/ddd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="12dp"
            android:layout_toRightOf="@id/tvsleepPercent"
            android:visibility="invisible"/>
             <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textStyle="bold"
            android:textColor="#ab45fc"
            android:layout_below="@id/ddd"
            android:textSize="22dp"
            android:layout_toRightOf="@id/tvsleepPercent"
            android:layout_marginLeft="2sp"/>
        </RelativeLayout>
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1.0"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout 
            android:layout_width="0sp"
            android:layout_weight="1.0"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center">
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/sleep_time"/>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/sleep_low_time"
	            android:textSize="22dp"
	            android:gravity="center"
            	android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView 
            android:id="@+id/tvsleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ab45fc"
            android:textSize="35dp"
            android:textStyle="bold"
            android:gravity="center"/>
             <TextView 
            android:id="@+id/ddd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12dp"
            android:layout_toRightOf="@id/tvsleep"
            android:visibility="invisible"/>
             <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hour"
            android:layout_below="@id/ddd"
            android:textColor="#ab45fc"
            android:textSize="18dp"
            android:layout_toRightOf="@id/tvsleep"
            android:layout_marginLeft="2sp"/>
        
        </RelativeLayout>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="0sp"
            android:layout_weight="1.0"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center">
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/sleep_deep"/>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/sleep_deep_time"
	            android:textSize="22dp"
	            android:gravity="center"
            	android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView 
            android:id="@+id/tvsleepDeep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ab45fc"
            android:textStyle="bold"
            android:textSize="35dp"
            android:gravity="center"/>
             <TextView 
            android:id="@+id/ddd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="æ­¥"
            android:textSize="12dp"
            android:layout_toRightOf="@id/tvsleepDeep"
            android:visibility="invisible"/>
             <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hour"
            android:textColor="#ab45fc"
            android:layout_below="@id/ddd"
            android:layout_toRightOf="@id/tvsleepDeep"
            android:layout_marginLeft="2sp"
            android:textSize="18dp"/>
             </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1.5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:layout_marginTop="10sp">
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/healthtip"
            android:textSize="25dp"
            android:gravity="center"/>
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sleep_tip_content"
            android:textSize="22sp"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
